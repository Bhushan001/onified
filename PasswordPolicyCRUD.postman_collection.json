{
  "info": {
    "name": "Password Policy CRUD",
    "_postman_id": "password-policy-crud-collection",
    "description": "CRUD operations for Password Policy API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get All Password Policies",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/api/password-policy",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "password-policy"]
        }
      }
    },
    {
      "name": "Get Default Password Policy",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/api/password-policy/platform",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "password-policy", "platform"]
        }
      }
    },
    {
      "name": "Get Password Policy By ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/api/password-policy/:id",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "password-policy", ":id"]
        }
      }
    },
    {
      "name": "Create Password Policy",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"policyName\": \"My Policy\",\n  \"description\": \"A custom policy\",\n  \"minLength\": 8,\n  \"maxPasswordAge\": 90,\n  \"minPasswordAge\": 1,\n  \"passwordHistory\": 5,\n  \"requireUppercase\": true,\n  \"requireLowercase\": true,\n  \"requireNumber\": true,\n  \"requireSpecial\": true,\n  \"initialPasswordFormat\": \"Alphanumeric\",\n  \"bannedPatterns\": \"password,1234\",\n  \"isActive\": true,\n  \"isDefault\": false\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/api/password-policy",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "password-policy"]
        }
      }
    },
    {
      "name": "Update Password Policy",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"policyName\": \"My Updated Policy\",\n  \"description\": \"Updated description\",\n  \"minLength\": 10,\n  \"maxPasswordAge\": 60,\n  \"minPasswordAge\": 2,\n  \"passwordHistory\": 3,\n  \"requireUppercase\": true,\n  \"requireLowercase\": true,\n  \"requireNumber\": true,\n  \"requireSpecial\": false,\n  \"initialPasswordFormat\": \"Alphanumeric\",\n  \"bannedPatterns\": \"password,admin\",\n  \"isActive\": true,\n  \"isDefault\": false\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/api/password-policy/:id",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "password-policy", ":id"]
        }
      }
    },
    {
      "name": "Delete Password Policy",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/api/password-policy/:id",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "password-policy", ":id"]
        }
      }
    },
    {
      "name": "Set Policy as Default",
      "request": {
        "method": "PUT",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/api/password-policy/:id/default",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "password-policy", ":id", "default"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "BASE_URL",
      "value": "http://localhost:9081"
    }
  ]
} 